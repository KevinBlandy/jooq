<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.13.0.xsd">
	<!-- jdbc的配置 -->
	<jdbc>
		<driver>com.mysql.cj.jdbc.Driver</driver>
		<url>jdbc:mysql://localhost:3306/jooq?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=GMT%2b8&amp;allowMultiQueries=true</url>
		<user>root</user>
		<password>root</password>
	</jdbc>

	<generator>
		<!-- 
			指定生成器，默认：org.jooq.codegen.JavaGenerator
		 -->
		<name>org.jooq.codegen.JavaGenerator</name>

		<database>
			<!-- 指定数据库类型 -->
			<name>org.jooq.meta.mysql.MySQLDatabase</name>
			<!-- 数据库名称/用户 -->
			<inputSchema>jooq</inputSchema>
			<!-- 包含的表 -->
			<includes>.*</includes>
			<!-- 排除的表 -->
			<excludes></excludes>
			<!-- 
			<syntheticPrimaryKeys>public\..*\.id</syntheticPrimaryKeys>
			<overridePrimaryKeys>override_primmary_key</overridePrimaryKeys>
			 -->
		</database>
		
		<generate>
            <!--生成dao和pojo-->
            <daos>true</daos>
            <pojos>true</pojos>
            <!--把数据库时间类型映射到java 8时间类型-->
            <javaTimeTypes>true</javaTimeTypes>
            <interfaces>true</interfaces>
            <!--是否生成spring注释，比如@Repository-->
            <springAnnotations>true</springAnnotations>
        </generate>
		
		<target>
			<!-- 生成类的包 -->
			<packageName>io.springboot.jooq.generated</packageName>

			<!-- 生成的目标目录 -->
			<directory>src/main/java</directory>
		</target>
	</generator>
</configuration>